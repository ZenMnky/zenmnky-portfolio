extends layout

block content 
  article.grid-container.portfolio-intro
    div

      //- Title/Heading
      h1 Software Developer Portfolio

      //- Portfolio Description (what this project is, it's purpose, what it's supposed to accomplish, etc.)
      p.lead.text-light
        |  A portfolio of software devlopment projects intended to schowcase current coding abilities and understaing to with the aim of being hired
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      //- Create an img, title and link for each project
      //- Dynamic generation of routes
      each project, index in projects
        .cell.popAndShadow
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls.main}`)
            h5=project.project_name

      
